
{
  "functions": {
    "api/admin.ts": {
      "memory": 1024
    },
    "api/mercadopago.ts": {
      "memory": 1024
    },
    "api/products.ts": {
      "memory": 1024
    },
    "api/ml-item.ts": {
      "memory": 1024
    },
    "api/shopee.ts": {
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/admin/:path*", "destination": "/api/admin" },
    { "source": "/api/mercadopago/:path*", "destination": "/api/mercadopago" },
    { "source": "/api/products", "destination": "/api/products" },
    { "source": "/api/ml-item", "destination": "/api/ml-item" },
    { "source": "/api/shopee", "destination": "/api/shopee" },
    { "source": "/((?!api/|_next/|assets/|static/|icons/|sw.js|manifest.json).*)", "destination": "/index.html" }
  ]
}
